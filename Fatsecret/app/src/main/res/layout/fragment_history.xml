<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/wave_top"
        android:orientation="vertical">

        <!-- Enhanced Header -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/primary"
            android:layout_marginBottom="24dp"
            style="@style/Widget.FatSecret.CardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“… Food Log History"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Track your nutrition journey"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:alpha="0.9" />

                </LinearLayout>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="ðŸ“Š"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:background="@drawable/circle_background_white"
                    android:elevation="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Enhanced Loading Progress -->
        <LinearLayout
            android:id="@+id/layoutLoadingState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progressLoading"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:indicatorColor="@color/primary"
                app:trackColor="@color/surface_variant"
                android:indeterminate="true"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”„ Loading your history..."
                android:textSize="16sp"
                android:textColor="?attr/colorOnBackground"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Enhanced Calendar Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="?attr/colorSurface"
            style="@style/Widget.FatSecret.CardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Calendar Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ—“ï¸ Select Date"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:text="ðŸ“†"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:background="@drawable/circle_background_secondary" />

                </LinearLayout>

                <!-- Calendar with enhanced styling -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/calendar_background"
                    android:padding="8dp">

                    <CalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/CalendarTheme" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Enhanced Selected Date Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="?attr/colorSurface"
            style="@style/Widget.FatSecret.CardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Date Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“ Selected Date"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:text="â­"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:background="@drawable/circle_background_primary"
                        android:textColor="@color/white" />

                </LinearLayout>

                <!-- Enhanced Date Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/nutrition_item_background"
                    android:padding="10dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tvSelectedDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Today - June 10, 2025"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:gravity="center"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvDailySummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total: 0/2000 cal (0% of target)"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:gravity="center"
                        android:layout_marginBottom="16dp" />

                    <!-- Enhanced Progress Bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ðŸŽ¯ Daily Progress"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary" />

                        </LinearLayout>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progressBarDaily"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            app:indicatorColor="@color/primary"
                            app:trackColor="@color/surface_variant"
                            app:trackCornerRadius="4dp"
                            android:progress="0"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:layout_marginBottom="6dp"
                            android:max="100" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Enhanced Meals List Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="?attr/colorSurface"
            style="@style/Widget.FatSecret.CardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Meals Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ½ï¸ Detailed Meals"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:text="ðŸ´"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:background="@drawable/circle_background_secondary" />

                </LinearLayout>

                <!-- Enhanced No Meals State -->
                <LinearLayout
                    android:id="@+id/tvNoMeals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:text="ðŸ“­"
                        android:textSize="40sp"
                        android:gravity="center"
                        android:background="@drawable/circle_background_light"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/tes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No meals logged for this date"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:textAlignment="center"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Start tracking your meals to see them here"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textAlignment="center" />

                </LinearLayout>

                <!-- Meals RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMeals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:visibility="gone" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>