<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/wave_top">

        <!-- Enhanced Header with Gradient Background -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.FatSecret.CardView"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="@color/primary"
            app:cardElevation="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvUserGreeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hi, Ervin! ðŸ‘‹"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvDateHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today, December 9"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:alpha="0.9" />
                </LinearLayout>

                <!-- Motivational Icon -->
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="ðŸ’ª"
                    android:textSize="32sp"
                    android:gravity="center"
                    android:background="@drawable/circle_background_white"
                    android:elevation="4dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Enhanced Daily Progress Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.FatSecret.CardView"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header with Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“Š Daily Nutrition Progress"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸŽ¯"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="@drawable/circle_background_primary"
                        android:textColor="@color/white" />
                </LinearLayout>

                <!-- Calories Progress with Enhanced Design -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/nutrition_item_background"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ”¥ Calories"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorCalories" />

                        <TextView
                            android:id="@+id/tvCaloriesProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 / 2640 kcal"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />
                    </LinearLayout>

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressCalories"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        app:indicatorColor="@color/colorProtein"
                        app:trackColor="@color/surface_variant"
                        app:trackCornerRadius="4dp"
                        android:max="100"
                        android:progress="0" />
                </LinearLayout>

                <!-- Protein Progress -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/nutrition_item_background"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ¥© Protein"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorProtein" />

                        <TextView
                            android:id="@+id/tvProteinProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 / 165g"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />
                    </LinearLayout>

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressProtein"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        app:indicatorColor="@color/colorProtein"
                        app:trackColor="@color/surface_variant"
                        app:trackCornerRadius="4dp"
                        android:max="100"
                        android:progress="0" />
                </LinearLayout>

                <!-- Carbs Progress -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/nutrition_item_background"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸž Carbohydrates"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorCarbs" />

                        <TextView
                            android:id="@+id/tvCarbsProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 / 297g"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />
                    </LinearLayout>

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressCarbs"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        app:indicatorColor="@color/colorCarbs"
                        app:trackColor="@color/surface_variant"
                        app:trackCornerRadius="4dp"
                        android:max="100"
                        android:progress="0" />
                </LinearLayout>

                <!-- Fat Progress -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/nutrition_item_background"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ¥‘ Fat"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorFat" />

                        <TextView
                            android:id="@+id/tvFatProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 / 88g"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />
                    </LinearLayout>

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressFat"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        app:indicatorColor="@color/colorFat"
                        app:trackColor="@color/surface_variant"
                        app:trackCornerRadius="4dp"
                        android:max="100"
                        android:progress="0" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Enhanced Meals Section Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ½ï¸ Meals Today"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="ðŸ“…"
                android:textSize="18sp"
                android:gravity="center"
                android:background="@drawable/circle_background_secondary" />
        </LinearLayout>

        <!-- Enhanced Breakfast Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBreakfast"
            app:cardBackgroundColor="?attr/colorSurface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.FatSecret.CardView"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸŒ… Breakfast"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddBreakfast"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="+ Add"
                        style="@style/Widget.FatSecret.Button"
                        android:textSize="14sp"
                        android:minWidth="80dp"
                        app:cornerRadius="20dp"
                        app:iconGravity="textStart" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvBreakfastItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:id="@+id/tvBreakfastTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total: 0 kcal"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorCalories"
                    android:gravity="end"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:background="@drawable/total_background"
                    android:padding="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Enhanced Lunch Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLunch"
            app:cardBackgroundColor="?attr/colorSurface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.FatSecret.CardView"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â˜€ï¸ Lunch"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddLunch"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="+ Add"
                        style="@style/Widget.FatSecret.Button"
                        android:textSize="14sp"
                        android:minWidth="80dp"
                        app:cornerRadius="20dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvLunchItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:id="@+id/tvLunchTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total: 0 kcal"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/primary"
                    android:gravity="end"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:background="@drawable/total_background"
                    android:padding="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Enhanced Dinner Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDinner"
            app:cardBackgroundColor="?attr/colorSurface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.FatSecret.CardView"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸŒ† Dinner"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddDinner"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="+ Add"
                        style="@style/Widget.FatSecret.Button"
                        android:textSize="14sp"
                        android:minWidth="80dp"
                        app:cornerRadius="20dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvDinnerItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:id="@+id/tvDinnerTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total: 0 kcal"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/primary"
                    android:gravity="end"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:background="@drawable/total_background"
                    android:padding="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Enhanced Snack Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSnack"
            app:cardBackgroundColor="?attr/colorSurface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.FatSecret.CardView"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ¿ Snack"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddSnack"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="+ Add"
                        style="@style/Widget.FatSecret.Button"
                        android:textSize="14sp"
                        android:minWidth="80dp"
                        app:cornerRadius="20dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSnackItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:id="@+id/tvSnackTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total: 0 kcal"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/primary"
                    android:gravity="end"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:background="@drawable/total_background"
                    android:padding="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>