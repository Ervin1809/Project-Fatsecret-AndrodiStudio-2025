<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/dialog_background"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Enhanced Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="28dp"
            android:background="@drawable/button_gradient"
            android:padding="8dp">

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="ðŸ‘¤"
                android:textSize="24sp"
                android:gravity="center"
                android:background="@drawable/profile_icon_bg"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Health Profile"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘‹ Hi Ervin1809! Complete your profile"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Enhanced Basic Health Data Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/calendar_background"
            android:padding="20dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ“Š Basic Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Required"
                    android:textSize="12sp"
                    android:textColor="@color/error"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp" />

            </LinearLayout>

            <!-- Enhanced Height Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Height (cm)"
                style="@style/Widget.FatSecret.TextInputLayout"
                app:startIconDrawable="@drawable/ic_height"
                app:helperText="e.g. 170">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Enhanced Current Weight Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Current Weight (kg)"
                style="@style/Widget.FatSecret.TextInputLayout"
                app:startIconDrawable="@drawable/ic_weigth"
                app:helperText="e.g. 70.5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Enhanced Target Weight Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Target Weight (kg)"
                style="@style/Widget.FatSecret.TextInputLayout"
                app:startIconDrawable="@drawable/ic_target"
                app:helperText="Your goal weight">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTargetWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Enhanced Personal Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/button_gradient"
            android:padding="20dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸŽ¯ Personal Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Optional"
                    android:textSize="12sp"
                    android:textColor="@color/success"
                    android:background="@drawable/stat_item_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ’¡ Complete this section to get personalized daily nutrition targets based on your BMR and TDEE"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="20dp"
                android:lineSpacingExtra="2dp" />

            <!-- Enhanced Gender Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¤ Gender"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="12dp" />

            <RadioGroup
                android:id="@+id/rgGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <RadioButton
                    android:id="@+id/rbMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¨ Male"
                    android:textSize="15sp"
                    android:layout_marginEnd="32dp"
                    android:buttonTint="@color/primary" />

                <RadioButton
                    android:id="@+id/rbFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘© Female"
                    android:textSize="15sp"
                    android:buttonTint="@color/primary" />

            </RadioGroup>

            <!-- Enhanced Age Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="Age (years)"
                style="@style/Widget.FatSecret.TextInputLayout"
                app:startIconDrawable="@drawable/ic_person"
                app:helperText="e.g. 25">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Enhanced Activity Level -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸƒâ€â™‚ï¸ Activity Level"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How active are you on a typical day?"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerActivityLevel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/calendar_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Enhanced Calculated Targets Display -->
        <LinearLayout
            android:id="@+id/layoutCalculatedTargets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@drawable/button_gradient"
            android:padding="20dp"
            android:layout_marginBottom="28dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸŽ¯ Your Daily Nutrition Targets"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ¨ Calculated"
                    android:textSize="12sp"
                    android:background="@drawable/stat_item_background"
                    android:textColor="@color/success"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvCalculatedTargets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="Fill all fields above to see your personalized targets"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- Enhanced Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŒ Cancel"
                android:textSize="14sp"
                style="@style/Widget.FatSecret.Button.Outlined"
                app:cornerRadius="24dp"
                android:layout_marginEnd="12dp"
                android:minWidth="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¾ Save Profile"
                android:textSize="14sp"
                style="@style/Widget.FatSecret.Button"
                app:cornerRadius="24dp"
                android:minWidth="140dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>