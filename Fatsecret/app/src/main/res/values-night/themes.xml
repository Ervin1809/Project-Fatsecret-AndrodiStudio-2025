<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for dark mode. -->
    <style name="Base.Theme.FatSecret" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- PENTING: Ganti ke NoActionBar! -->

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors for dark mode -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Status bar for dark mode -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar for dark mode -->
        <item name="android:navigationBarColor">@color/surface_dark</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Text colors for dark mode -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/text_hint</item>
        <item name="android:textColorHint">@color/text_secondary</item>

        <!-- Window background for dark mode -->
        <item name="android:windowBackground">@color/background_dark</item>

        <!-- Action bar DISABLED -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Material Components for dark mode -->
        <item name="colorControlNormal">@color/text_hint</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary_light</item>
    </style>
</resources>