<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme. -->
    <style name="Base.Theme.FatSecret" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- ✅ Primary Colors for Dark -->
        <item name="colorPrimary">@color/primary_dark_theme</item>
        <item name="colorPrimaryVariant">@color/primary_dark_theme_variant</item>
        <item name="colorOnPrimary">@color/background_dark</item>

        <!-- ✅ Secondary Colors for Dark -->
        <item name="colorSecondary">@color/secondary_dark_theme</item>
        <item name="colorSecondaryVariant">@color/secondary_dark_theme_variant</item>
        <item name="colorOnSecondary">@color/background_dark</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>

        <!-- ✅ Status bar for Dark -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/surface_dark</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- ✅ Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- ✅ Text colors for Dark -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:textColorHint">@color/text_hint_dark</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/background_dark</item>

        <!-- Action bar DISABLED -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- ✅ Material Components for Dark -->
        <item name="colorControlNormal">@color/text_secondary_dark</item>
        <item name="colorControlActivated">@color/primary_dark_theme</item>
        <item name="colorControlHighlight">@color/primary_dark_theme</item>
    </style>
</resources>